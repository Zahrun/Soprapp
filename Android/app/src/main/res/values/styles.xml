<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorPrimary">@color/orangeSopra</item>
        <item name="colorPrimaryDark">@color/redSopra</item>
        <item name="colorAccent">@color/orangeSopra</item>
    </style>

    <style name="PagerTabStrip">
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
